# ─── POLYMARKET ───────────────────────────────────────────────────────────────
# API key from https://clob.polymarket.com
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=
# Your Polymarket proxy wallet address (the one that places orders)
POLY_PROXY_WALLET=
# Private key for signing (ECDSA) — KEEP THIS SECRET
POLY_PRIVATE_KEY=

# ─── STRATEGY ────────────────────────────────────────────────────────────────
# Condition IDs for BTC binary contracts on Polymarket (optional — auto-discovered)
# Find these at: https://clob.polymarket.com/markets
POLY_CONDITION_ID=
POLY_TOKEN_ID_YES=
POLY_TOKEN_ID_NO=

# ─── MARKETS ─────────────────────────────────────────────────────────────────
# Assets to monitor (comma-separated). Supported: BTC, ETH, SOL
# Each asset × window combination runs its own discovery + strategy instance.
ASSETS=BTC
# Window sizes in minutes (comma-separated). Supported: 5, 15
WINDOWS=5
# Override Binance symbols if needed (defaults: btcusdt, ethusdt, solusdt)
# BTC_SYMBOL=btcusdt
# ETH_SYMBOL=ethusdt
# SOL_SYMBOL=solusdt

# ─── RISK ────────────────────────────────────────────────────────────────────
BANKROLL=1300
MAX_BET_FRACTION=0.04
ENTRY_THRESHOLD=0.03
MIN_EDGE=0.03
MAX_POSITION_USD=100
MAX_OPEN_POSITIONS=5
COOLDOWN_MS=3000

# Certainty-arb (last 90s of window): higher edge required, smaller position
# CERTAINTY_THRESHOLD=0.15
# CERTAINTY_MAX_FRACTION=0.02

# ─── EXECUTION ───────────────────────────────────────────────────────────────
DRY_RUN=true
LOG_LEVEL=info
SLIPPAGE_BPS=15
FEE_BPS=20
ORDER_TYPE=GTC

# ─── ALERTS (optional) ──────────────────────────────────────────────────────
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
