# ─── POLYMARKET ───────────────────────────────────────────────────────────────
# API key from https://clob.polymarket.com
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=
# Private key for signing (ECDSA) — KEEP THIS SECRET
POLY_PRIVATE_KEY=

# ─── MARKETS ─────────────────────────────────────────────────────────────────
# Assets to monitor (comma-separated). Supported: BTC, ETH, SOL
# Each asset × window combination runs its own discovery + strategy instance.
ASSETS=BTC
# Window sizes in minutes (comma-separated). Supported: 5, 15
WINDOWS=5
# Override Binance symbols if needed (defaults: btcusdt, ethusdt, solusdt, xrpusdt)
# BTC_SYMBOL=btcusdt
# ETH_SYMBOL=ethusdt
# SOL_SYMBOL=solusdt
# XRP_SYMBOL=xrpusdt

# ─── RISK ────────────────────────────────────────────────────────────────────
BANKROLL=1300
MAX_BET_FRACTION=0.04
ENTRY_THRESHOLD=0.08        # 5m markets global default (overridden per-asset below)
ENTRY_THRESHOLD_15M=0.03   # 15m markets (stay at 3% — more liquidity near 50¢)

# Per-asset 5m threshold overrides. SOL defaults to 20% (72.9% SL rate at lower thresholds).
# Uncomment and tune as new data accumulates.
# BTC_ENTRY_THRESHOLD_5M=0.05
# ETH_ENTRY_THRESHOLD_5M=0.05
SOL_ENTRY_THRESHOLD_5M=0.20
# XRP_ENTRY_THRESHOLD_5M=0.05

# BUY_NO risk controls.
# BUY_NO_MAX_YES_MID: suppress BUY_NO when YES contract mid exceeds this — top-10 loss cluster
# was all BUY_NO at YES mid 0.73–0.81. Raise cautiously; lower to 0.65 for extra safety.
BUY_NO_MAX_YES_MID=0.70
# BUY_NO_KELLY_MULT: scale BUY_NO position size. SL avg $35.86 vs $25.03 for winners.
BUY_NO_KELLY_MULT=0.50

# Per-asset daily vol (used as Black-Scholes sigma seed backstop)
BTC_VOL=0.015
ETH_VOL=0.020
SOL_VOL=0.030
XRP_VOL=0.035

MAX_POSITION_USD=100
MAX_OPEN_POSITIONS=8
COOLDOWN_MS=3000
DAILY_LOSS_LIMIT=200
PROFIT_TARGET_PCT=0.99
STOP_LOSS_PCT=0.15

# ─── EXECUTION ───────────────────────────────────────────────────────────────
DRY_RUN=true
LOG_LEVEL=info
SLIPPAGE_BPS=15
FEE_BPS=20
ORDER_TYPE=GTC

# ─── CALIBRATION (optional) ──────────────────────────────────────────────────
# Adjusts raw BS N(d2) probabilities toward observed win rates using a binned
# correction table built from data/features.ndjson + data/trades.ndjson.
# Requires 200+ fired signals. Disabled by default — needs per-asset / per-regime
# tuning before it reliably improves over the raw model.
CALIBRATION_ENABLED=false

# ─── ALERTS (optional) ──────────────────────────────────────────────────────
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
